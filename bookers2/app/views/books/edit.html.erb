<main>
  <h2>Book detail</h2>
  
  <table>
    <tbody>
      <tr>
        <% @books.each do |book| %>
          <td><%= @user.name %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td><p><%= link_to 'Edit', edit_book_path(@book) %></p></td>
          <td><p><%= link_to 'Destroy', books_path(@book), method: :delete %></p></td>
        
      </tr>
    </tbody>
  </table>
</main>