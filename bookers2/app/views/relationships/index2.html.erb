<main>
  <h1>Followed Users</h1>
  <% if @users.empty? %>
    <text>ユーザーはいません</text>
  <% else %>
    <table class='table'>
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
        </tr>
        <tbody>
          <% @user.followed_user.each do |user| %>
            <tr>
              <th>
                 <%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg' %>
              </th>
              <th>
                <%= user.name %>
              </th>
              <th>
                <%= user.follower.count %>
              </th>
              <th>
                <%= user.followed.count %>
              </th>
              <th>
                <%= link_to 'show', user_path(user.id) %>
              </th>
            </tr>
          <% end %>
        </tbody>
      </thead>
    </table>
  <% end %>
</main>