<main>
    <div class='container px-5 px-5m0'>
        <div class='row'>
            <div class='col-md-3'>
                <h2>User info</h2>
                <img class='attachment user profile_image fallback'><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format:'jpeg', fallback:'no_image.jpg' %></img>

                <table class='table'>
                    <tbody>
                        <tr>
                            <th>name</th>
                            <th><%= @user.name %></th>
                        </tr>
                        <tr>
                            <th>introduction</th>
                            <th><%= @user.introduction %></th>
                        </tr>
                    </tbody>
                </table>

                <div class='row'>
                    <a class= 'btn btn-outline-secondary btn-block fas fa-user-cog' href='/users/<%= @user.id%>/edit'></a>
                </div>

                <div>
                    <h2 class='mt-3'>New Book</h2>
                    <%= form_with model:@book, local:true do |f| %>
                        <div class='form-group'>
                            <p for='inputTitle'>Title</p>
                            <%= f.text_field :title, autofocus:true, id:'inputTitle' %>
                        </div>
                        <div class='form-group'>
                            <p for='inputOpinion'>Opinion</p>
                            <%= f.text_field :body, autofocus:true, id:'inputOpinion' %>
                        </div>
                        <div class='form-group'>
                            <input class='btn btn-success' <%= f.submit 'Create Book' %>
                        </div>
                    <% end %>
                </div>
            </div>

            <div class='col-md-8 offset-md-1'>
                <h2>Books</h2>
                <table class='table table-hover table-inverse'>
                    <thead>
                        <tr>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th colspan='3'></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @books.each do |book| %>
                            <tr>
                                <td>
                                    <img class='attachment user profile_image fallback'><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg' %></img>
                                </td>
                                <td><%= book.title %></td>
                                <td><a href='/books/<%= book.id %>'><%= book.body %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</main>