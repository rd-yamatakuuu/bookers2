<main>

  <div class='containter'>
    <div class='row'>
      <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
        <h1>Editing Book</h1>

          <h2 class='mt-3'>New Book</h2>
          <%= form_with model:@book, local:true do |f| %>
            <div class='form-group'>
              <p for='inputTitle'>Title</p>
              <%= f.text_field :title, autofocus:true, id:'inputTitle' %>
            </div>
            <div class='form-group'>
              <p for='inputOpinion'>Opinion</p>
              <%= f.text_field :body, autofocus:true, id:'inputOpinion' %>
            </div>
            <div class='form-group'>
              <input class='btn btn-success' <%= f.submit 'Create Book' %>
            </div>
                    <% end %>
      </div>
    </div>
  </div>

</main>