<main>
   <% if @book.errors.any? %>
    <div class='errorframe'>
        <h2>error...</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>  

  <div class='container'>
    <div class='row'>
      <div class='col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto'>
        <h1>Editing Book</h1>

          <h2 class='mt-3'>New Book</h2>
          <%= form_with model:@book, local:true do |f| %>
            <div class='form-group'>
              <p for='inputTitle'>Title</p>
              <%= f.text_field :title, autofocus:true, id:'inputTitle' %>
            </div>
            <div class='form-group'>
              <p for='inputOpinion'>Opinion</p>
              <%= f.text_field :body, autofocus:true, id:'inputOpinion' %>
            </div>
            <div class='form-group'>
              <input class='btn btn-success' <%= f.submit 'Update Book' %>
            </div>
          <% end %>
          <%= link_to 'Show', book_path(@book) %>
          <text>|</text>
          <%= link_to 'Back', books_path %>
          
      </div>
    </div>
  </div>

</main>