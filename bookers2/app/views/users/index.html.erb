<main>
    
    <% if flash[:notice] %>
      <p class='notice'><%= flash[:notice]%></p>
    <% end %>

    <% if @book.errors.any? %>
      <div class='errorframe'>
         <h2>error...</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class='container px-5 px-5m0'>
        <div class='row'>
            <div class='col-md-3'>
                <%= render 'books/info', user: current_user %>
                <%= render 'books/newbook', book: @book_new %>
            </div>

            <div class='col-md-8 offset-md-1'>
                <h2>Users</h2>
                <table class='table table-hover table-inverse'>
                    <thead>
                        <tr>
                            <th></th>
                            <th>image</th>
                            <th>name</th>
                            <th colspan='3'></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @users.each do |user| %>
                            <tr>
                                <td>
                                    <img class='attachment user profile_image fallback'><%= attachment_image_tag user, :profile_image, :fill, 40, 40, format:'jpeg', fallback:'no_image.jpg' %></img>
                                </td>
                                <td><%= user.name %></td>
                                <td><%= link_to 'Show', user_path(user.id) %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</main>